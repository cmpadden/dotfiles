# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = false
        interval = 5
}

# order += "load"
# order += "disk /"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

ipv6 {
	format_up = "%ip"
	format_down = ""
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = ""
}

battery all {
        format = "%status %percentage"
	format_down = ""
	status_chr = "CHR"
	status_unk = "UNK"
	status_full = "FULL"
	low_threshold = 15
}

tztime local {
        format = "%a, %d %b %y %T"
}

volume master {
	format = "VOL %volume"
	format_muted = "MUTE (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

