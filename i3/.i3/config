bar {
    position bottom
    tray_output primary
    status_command i3status
    
    colors {
        background #000000
        statusline #FFFFFF
        separator  #666666
        
        # CLASS            BORDER  BACKGR. TEXT
        focused_workspace  #FFFFFF #000000 #FFFFFF
        active_workspace   #000000 #666666 #FFFFFF
        Inactive_workspace #000000 #000000 #FFFFFF
        urgent_workspace   #000000 #FF0000 #FFFFFF
        binding_mode       #000000 #900000 #FFFFFF
    }
}

# CLASS                 BORDER  BACKGR. TEXT    INDICATOR CHILD_BORDER
client.focused          #000000 #FFFFFF #FFFFFF #FFFFFF   #FFFFFF
client.focused_inactive #000000 #000000 #FFFFFF #FFFFFF   #FFFFFF
client.unfocused        #000000 #000000 #FFFFFF #FFFFFF   #FFFFFF
client.urgent           #000000 #000000 #FFFFFF #FFFFFF   #FFFFFF
client.placeholder      #000000 #000000 #FFFFFF #FFFFFF   #FFFFFF
