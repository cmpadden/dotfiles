# makes sure Xresources is most recent
exec xrdb -merge ~/.Xresources

# set background
exec sh ~/.fehbg

# enable xbindkeys
# exec xbindkeys

# Monitor configuration; TODO move this elsewhere
exec xrandr --output DVI-I-2 --mode 1920x1080 --rate 144.00 --right-of DVI-I-3

# Redshift
exec redshift -l 38.68:-77.43 -t 4000:3000

# start tmux terminal on workspace 2
# exec --no-startup-id i3-msg 'workspace 2: tty; exec tmux new-session -n $USER -s $USER@$HOSTNAME;'

# start firefox on workspace 1 (switches back to workspace 1)
exec --no-startup-id i3-msg 'workspace 1; exec firefox;'

# set modkey
set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
font xft:DejaVu Sans Mono 10 

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# window borders
new_window pixel 2
new_float pixel  2

