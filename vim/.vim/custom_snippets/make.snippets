snippet help "self generating help goal" t
.DEFAULT_GOAL := help

help:
	@echo "---------------------------------------------------------------"
	@echo "|                       Available Goals                       |"
	@echo "---------------------------------------------------------------"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-15s\033[0m %s\n", \$\$1, \$\$2}'
endsnippet
