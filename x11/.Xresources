! -------------------------------------------------------------------------------- 
! Xft
! -------------------------------------------------------------------------------- 
 
! Xft.dpi:          96 
! Xft.antialias:    true
! Xft.hinting:      true
! Xft.rgba:         rgb
! Xft.autohint:     false
! Xft.hintstyle:    hintfull
! Xft.lcdfilter:    lcddefault

! -------------------------------------------------------------------------------- 
! URxvt
! -------------------------------------------------------------------------------- 
 
URxvt.depth:            32
URxvt.saveLines:        500
URxvt.internalBorder:   8
URxvt.transparent:      false
URxvt.visualBell:       false
URxvt.scrollBar:        false
URxvt.lineSpace:        0
URxvt.letterSpace:      0

! /usr/share/fonts/misc/fonts.alias
! fc-list
#define termfont      xft:xos4 Terminus-10
URxvt.font:           termfont
URxvt.boldFont:       termfont
URxvt.italicFont:     termfont
URxvt.boldItalicFont: termfont

! -------------------------------------------------------------------------------- 
! Rofi
! -------------------------------------------------------------------------------- 

! State            BG        FG        BGALT     HLBG      HLFG
rofi.color-normal: #000000,  #444444,  #000000,  #000000,  #FFFFFF
rofi.color-urgent: #000000,  #444444,  #000000,  #000000,  #FF0000
rofi.color-active: #000000,  #444444,  #000000,  #000000,  #FFFFFF

!                  BG        FG        SEP
rofi.color-window: #000000,  #000000,  #FFFFFF

rofi.color-enabled:     false
rofi.fake-transparency: false
rofi.font:              xos4 Terminus 10
rofi.fullscreen:        false
rofi.hide-scrollbar:    true
rofi.line-margin:       5
rofi.lines:             5
rofi.location:          0
rofi.opacity:           0
rofi.padding:           8
rofi.separator-style:   none
rofi.width:             20
rofi.xoffset:           0
rofi.yoffset:           0

